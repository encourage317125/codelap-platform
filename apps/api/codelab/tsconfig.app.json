{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "types": ["node", "@xstate/react", "object-mapper"],
    "jsx": "react",
    "esModuleInterop": true,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2018"
  },
  "exclude": ["**/*.spec.ts", "**/*.tsx"],
  "include": ["**/*.ts"]
}
