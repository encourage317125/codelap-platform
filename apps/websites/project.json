{
  "name": "websites",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/websites/src",
  "projectType": "application",
  "generators": {},
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/websites"
      },
      "configurations": {
        "ci": {
          "root": "apps/websites",
          "outputPath": "dist/apps/websites"
        },
        "production": {},
        "development": {
          "outputPath": "tmp/apps/websites/src"
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-test": {
      "executor": "nx:run-commands",
      "configurations": {
        "dev": {
          "commands": [
            {
              "command": "nx serve websites -c test"
            }
          ]
        },
        "ci": {
          "commands": [
            {
              "command": "npx next start dist/apps/websites --port 3000"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "websites:build",
        "dev": true,
        "port": 3000,
        "hostname": "0.0.0.0",
        "maxWorkers": 4
      },
      "configurations": {
        "ci": {},
        "test": {
          "buildTarget": "websites:build:test",
          "memoryLimit": 8192,
          "port": 3001
        },
        "production": {
          "buildTarget": "websites:build:production",
          "dev": false
        },
        "development": {
          "buildTarget": "websites:build:development",
          "dev": true
        }
      },
      "defaultConfiguration": "development"
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "websites:build:production"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/websites/**/*.{ts,tsx,js,jsx}"]
      },
      "outputs": ["{options.outputFile}"],
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/websites.xml",
          "quiet": true
        }
      }
    }
  },
  "tags": ["scope:frontend"],
  "implicitDependencies": []
}
