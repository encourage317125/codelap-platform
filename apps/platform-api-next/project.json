{
  "name": "platform-api-next",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/platform-api-next",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "prod",
      "options": {
        "outputPath": "dist/apps/platform-api-next"
      },
      "configurations": {
        "dev": {},
        "ci": {},
        "test": {
          "outputPath": "dist/apps/platform-api-next-test"
        },
        "prod": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "dev",
      "options": {
        "port": 4000,
        "buildTarget": "platform-api-next:build:dev",
        "dev": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "platform-api-next:build:ci",
          "dev": false
        },
        "dev": {},
        "test": {
          "port": 4001,
          "buildTarget": "platform-api-next:build:test"
        },
        "prod": {
          "buildTarget": "platform-api-next:build:prod",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "platform-api-next:build:prod"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/platform-api-next/**/*.{ts,tsx,js,jsx}"]
      },
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/platform-api-next.xml",
          "quiet": true
        }
      }
    }
  },
  "tags": ["scope:frontend"]
}
