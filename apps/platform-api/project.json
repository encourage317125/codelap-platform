{
  "name": "platform-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/platform-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "dev",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/platform-api",
        "main": "apps/platform-api/src/main.ts",
        "tsConfig": "apps/platform-api/tsconfig.app.json",
        "assets": ["apps/platform-api/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/platform-api/webpack.config.js"
      },
      "configurations": {
        "test": {
          "outputPath": "dist/apps/platform-api-test"
        },
        "prod": {
          "outputPath": "dist/apps/platform-api-serverless",
          "main": "apps/platform-api/src/serverless.ts"
        },
        "ci": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "dev",
      "options": {
        "buildTarget": "platform-api:build"
      },
      "configurations": {
        "dev": {
          "buildTarget": "platform-api:build:dev"
        },
        "prod": {
          "buildTarget": "platform-api:build:prod"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/platform-api/**/*.ts"]
      },
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/platform-api.xml",
          "quiet": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/platform-api/jest.config.ts",
        "passWithNoTests": true,
        "reporters": ["default"]
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "test:integration": {
      "defaultConfiguration": "dev",
      "options": {
        "memoryLimit": 8192,
        "color": true,
        "testPathPattern": ["[i].spec.ts"],
        "jestConfig": "apps/platform-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "ci": {
          "parallel": 3,
          "ci": true,
          "codeCoverage": true
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "test:unit": {
      "defaultConfiguration": "dev",
      "options": {
        "memoryLimit": 8192,
        "parallel": 3,
        "color": true,
        "testPathPattern": ["[^i].spec.ts"],
        "jestConfig": "apps/platform-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    }
  },
  "tags": ["scope:backend"]
}
